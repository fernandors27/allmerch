{{#merchandise}}
    <div class="container mt-5 mb-4">
        <div class="container">
            <div class="row">
            <!-- Gambar -->
            <div class="col-lg-6 col-md-12 col-sm-12 mb-4 mb-custom-650">
                <img src="{{image_url}}" alt="" style="border-radius: 8px; width: 100%;">
            </div>

            <!-- Info + Form + Details -->
            <div class="col-lg-6 col-md-12 col-sm-12">
                <h1 class="fw-bold font-custom-650">{{name}}</h1>
                {{#outOfStock}}
                <h2 class="fw-bold text-danger">OUT OF STOCK</h2>
                {{/outOfStock}}

                <div class="harga fw-bold font-harga-650" style="font-size: 25px;">Rp {{price}}</div>
                <div class="harga fw-bold font-harga-650" style="font-size: 25px;">Stock {{stock}}X</div>

                <form action="/merchandise/add_to_chart/{{id}}/{{price}}" method="post">
                <input type="hidden" name="id_merchandise" value="{{id}}">
                <input type="hidden" name="price" value="{{price}}">
                <div class="input-group mb-4 mt-4">
                    <button type="button" class="btn fw-bold" id="kurang" style="background-color: #3e5452; color: #fff;">-</button>
                    <input type="number" id="jumlah" name="quantity" class="form-control" value="1" min="1" max="{{stock}}" style="text-align: center;" readonly>
                    <button type="button" class="btn fw-bold" id="tambah" style="background-color: #3e5452; color: #fff;">+</button>
                </div>
                <button type="submit" class="btn w-100 mb-2" style="background-color: #fce477;">Add to cart</button>
                </form>

                <script>
                    const kurangBtn = document.getElementById('kurang');
                    const tambahBtn = document.getElementById('tambah');
                    const jumlahInput = document.getElementById('jumlah');

                    kurangBtn.addEventListener('click', () => {
                        const current = parseInt(jumlahInput.value);
                        if (current > 1) {
                            jumlahInput.value = current - 1;
                        }
                    });

                    tambahBtn.addEventListener('click', () => {
                        const current = parseInt(jumlahInput.value);
                        jumlahInput.value = current + 1;
                    });
                </script>

                {{#error}}
                <div class="row">
                    <div class="alert alert-danger" role="alert">
                    {{error}}
                    </div>
                </div>
                {{/error}}

                <!-- Details di sini -->
                <h3 class="mt-4">Details</h3>
                {{#details}}
                <ul>
                    <li><p>{{detail}}</p></li>
                </ul>
                {{/details}}
                {{^details}}
                No Details
                {{/details}}
            </div>
            </div>
        </div>
    </div>
{{/merchandise}}
