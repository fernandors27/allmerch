<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Akun Saya - ALLMERCH</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .account-container {
            max-width: 600px;
            margin: 60px auto;
            background: white;
            padding: 2em;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
        }
        .btn-custom {
            background-color: #fce477;
            border: none;
            font-weight: bold;
        }
        .btn-custom:hover {
            background-color: #e6cf65;
        }
        .btn-danger {
            font-weight: bold;
        }
        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3e5452; padding: 0.5em 0.5em 1em 0.5em;">
    <div class="container d-flex">
        <a class="navbar-brand fw-bold" href="/">ALLMERCH</a>
        <button class="navbar-toggler" style="border: none; color: transparent;" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav" style="gap: 1em;">
                {{^user}}
                    <li class="nav-item" style="padding: 0.2em 1em; border-radius: 8px;">
                        <a class="nav-link active" href="/login">Login</a>
                    </li>
                {{/user}}
                {{#user}}
                    <li class="nav-item" style="padding: 0.2em 1em; border-radius: 8px;">
                        <a class="nav-link active" href="/charts">Carts</a>
                    </li>
                    <li class="nav-item" style="padding: 0.2em 1em; border-radius: 8px;">
                        <a class="nav-link active" href="/orders">Orders</a>
                    </li>
                    <li class="nav-item" style="padding: 0.2em 1em; border-radius: 8px;">
                        <a class="nav-link active" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item" style="padding: 0.2em 1em; border-radius: 8px;">
                        <a class="nav-link active" href="/logout">Logout</a>
                    </li>
                {{/user}}
            </ul>
        </div>
    </div>
</nav>

<!-- Account Detail -->
<div class="container account-container">
    {{#success}}
        <div class="row">
            <div class="alert alert-success" role="alert">
                {{success}}
            </div>
        </div>
    {{/success}}
    <h2 class="fw-bold mb-4 text-center">Detail Akun</h2>

    <form style="margin-bottom: 2.5%;" action="/profile" method="post">
        <div class="mb-3">
            <label class="form-label">Nama Lengkap</label>
            <input type="text" name="name" class="form-control" value="{{user.name}}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" value="{{user.email}}" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" value="">
        </div>
        <div class="mb-3">
            <label class="form-label">Alamat Pengiriman</label>
            <textarea name="address" class="form-control" rows="3" required>{{user.address}}</textarea>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-custom">Save</button>
        </div>
    </form>

</div>

<!-- Footer -->
<footer class="text-center py-3 mt-5" style="background-color: #3e5452; color: white;">
    <small>&copy; 2025 ALLMERCH. All rights reserved.</small>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
